{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make",
            "type": "shell",
            "command": "make REV=${input:rev}",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean REV=1",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "rev",
            "description": "Revision:",
            "default": "2",
            "type": "pickString",
            "options": ["1", "2", "MDK"]
        },
    ]
}